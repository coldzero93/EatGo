<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@android:color/holo_red_dark"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:layout_weight="2">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="나의 먹자GO"
            android:textSize="30dp"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/darker_gray"
        android:orientation="horizontal"
        android:layout_weight="0.5">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1.2"
            android:gravity="center_vertical|center_horizontal|center"
            android:text="종류"
            android:textColor="#000000"
            android:textSize="20dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal|center"
            android:text="       점수(0-10)"
            android:textColor="#000000"
            android:textSize="20dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal|center"
            android:text="       제외"
            android:textColor="#000000"
            android:textSize="20dp"
            tools:gravity="center_vertical|center_horizontal|center" />
    </LinearLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="20">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="15dp"
                android:gravity="center_vertical|center_horizontal|center"
                android:text="한식"
                android:textColor="#000000"
                android:textSize="30sp" />

            <Button
                android:id="@+id/korMinus"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1500"
                android:text="-"
                android:textSize="36sp" />

            <EditText
                android:id="@+id/kor"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="-600"
                android:ems="2"
                android:enabled="false"
                android:gravity="center"
                android:inputType="number"
                android:text="0"
                android:textColor="#000000"
                android:textSize="30sp" />

            <Button
                android:id="@+id/korPlus"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1500"
                android:text="+"
                android:textSize="36sp" />

            <CheckBox
                android:id="@+id/kore"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="25dp"
                android:layout_weight="100"
                android:buttonTint="#000000"
                android:drawableTint="#000000"
                android:textColor="#000000" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="15dp"
                android:gravity="center_vertical|center_horizontal|center"
                android:text="일식"
                android:textColor="#000000"
                android:textSize="30sp" />

            <Button
                android:id="@+id/japMinus"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1500"
                android:text="-"
                android:textSize="36sp" />

            <EditText
                android:id="@+id/jap"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="-600"
                android:ems="2"
                android:enabled="false"
                android:gravity="center"
                android:inputType="number"
                android:text="0"
                android:textColor="#000000"
                android:textSize="30sp" />

            <Button
                android:id="@+id/japPlus"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1500"
                android:text="+"
                android:textSize="36sp" />

            <CheckBox
                android:id="@+id/jape"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="25dp"
                android:layout_weight="100"
                android:buttonTint="#000000"
                android:drawableTint="#000000"
                android:textColor="#000000" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="15dp"
                android:gravity="center_vertical|center_horizontal|center"
                android:text="중식"
                android:textColor="#000000"
                android:textSize="30sp" />

            <Button
                android:id="@+id/chnMinus"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1500"
                android:text="-"
                android:textSize="36sp" />

            <EditText
                android:id="@+id/chn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="-600"
                android:ems="2"
                android:enabled="false"
                android:gravity="center"
                android:inputType="number"
                android:text="0"
                android:textColor="#000000"
                android:textSize="30sp" />

            <Button
                android:id="@+id/chnPlus"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1500"
                android:text="+"
                android:textSize="36sp" />

            <CheckBox
                android:id="@+id/chne"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="25dp"
                android:layout_weight="100"
                android:buttonTint="#000000"
                android:drawableTint="#000000"
                android:textColor="#000000" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="15dp"
                android:gravity="center_vertical|center_horizontal|center"
                android:text="양식"
                android:textColor="#000000"
                android:textSize="30sp" />

            <Button
                android:id="@+id/wesMinus"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1500"
                android:text="-"
                android:textSize="36sp" />

            <EditText
                android:id="@+id/wes"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="-600"
                android:ems="2"
                android:enabled="false"
                android:gravity="center"
                android:inputType="number"
                android:text="0"
                android:textColor="#000000"
                android:textSize="30sp" />

            <Button
                android:id="@+id/wesPlus"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1500"
                android:text="+"
                android:textSize="36sp" />

            <CheckBox
                android:id="@+id/wese"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="25dp"
                android:layout_weight="100"
                android:buttonTint="#000000"
                android:drawableTint="#000000"
                android:textColor="#000000" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="15dp"
                android:gravity="center_vertical|center_horizontal|center"
                android:text="기타"
                android:textColor="#000000"
                android:textSize="30sp" />

            <Button
                android:id="@+id/etcMinus"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1500"
                android:text="-"
                android:textSize="36sp" />

            <EditText
                android:id="@+id/etc"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="-600"
                android:ems="2"
                android:enabled="false"
                android:gravity="center"
                android:inputType="number"
                android:text="0"
                android:textColor="#000000"
                android:textSize="30sp" />

            <Button
                android:id="@+id/etcPlus"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1500"
                android:text="+"
                android:textSize="36sp" />

            <CheckBox
                android:id="@+id/etce"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="25dp"
                android:layout_weight="100"
                android:buttonTint="#000000"
                android:drawableTint="#000000"
                android:textColor="#000000" />

        </TableRow>

    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:orientation="horizontal">

        <Button
            android:id="@+id/myInit"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginLeft="2.5dp"
            android:layout_marginRight="2.5dp"
            android:layout_weight="1"
            android:background="@android:color/holo_purple"
            android:text="초기화"
            android:textSize="20dp" />

        <Button
            android:id="@+id/myApply"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginLeft="2.5dp"
            android:layout_marginRight="2.5dp"
            android:layout_weight="1"
            android:background="@android:color/holo_purple"
            android:text="적용"
            android:textSize="20dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_weight="0.5"/>

</LinearLayout>