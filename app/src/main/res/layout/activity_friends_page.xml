<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:weightSum="14">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@android:color/holo_red_dark"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:layout_weight="1">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OOO님의 먹자GO"
            android:textSize="30dp"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="67dp"
        android:background="@android:color/darker_gray"
        android:orientation="horizontal"
        android:layout_weight="2">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.2"
            android:gravity="center_vertical|center_horizontal|center"
            android:text="     종류"
            android:textColor="#000000"
            android:textSize="18sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal|center"
            android:text="   점수"
            android:textColor="#000000"
            android:textSize="18sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal|center"
            android:text="  제외"
            android:textColor="#000000"
            android:textSize="18sp"
            tools:gravity="center_vertical|center_horizontal|center" />
    </LinearLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="10">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:gravity="center_vertical|center_horizontal|center"
                android:padding="1dp"
                android:textColor="#000000"
                android:textSize="30sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="15dp"
                android:gravity="center_vertical|center_horizontal|center"
                android:padding="5dp"
                android:text="한식"
                android:textColor="#000000"
                android:textSize="30sp" />

            <EditText
                android:id="@+id/kor"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="15dp"
                android:ems="3"
                android:gravity="center"
                android:inputType="number"
                android:padding="5dp"
                android:text="0"
                android:textColor="#000000"
                android:textSize="30sp"
                android:enabled="false"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="15dp"
                android:gravity="center_vertical|center_horizontal|center"
                android:padding="5dp"
                android:textColor="#000000"
                android:textSize="30sp" />

            <CheckBox
                android:id="@+id/kore"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="15dp"
                android:drawableTint="#000000"
                android:padding="5dp"
                android:textColor="#000000"
                android:buttonTint="#000000"
                android:enabled="false" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:gravity="center_vertical|center_horizontal|center"
                android:padding="1dp"
                android:textColor="#000000"
                android:textSize="30sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="15dp"
                android:gravity="center_vertical|center_horizontal|center"
                android:padding="5dp"
                android:text="일식"
                android:textColor="#000000"
                android:textSize="30sp" />

            <EditText
                android:id="@+id/jap"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="15dp"
                android:ems="3"
                android:gravity="center"
                android:inputType="number"
                android:padding="5dp"
                android:text="0"
                android:textColor="#000000"
                android:textSize="30sp"
                android:enabled="false" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="15dp"
                android:gravity="center_vertical|center_horizontal|center"
                android:padding="5dp"
                android:textColor="#000000"
                android:textSize="30sp" />

            <CheckBox
                android:id="@+id/jape"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="15dp"
                android:backgroundTintMode="src_over"
                android:drawableTint="#000000"
                android:foregroundTint="#000000"
                android:padding="5dp"
                android:textColor="#000000"
                android:buttonTint="#000000"
                android:enabled="false" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:gravity="center_vertical|center_horizontal|center"
                android:padding="1dp"
                android:textColor="#000000"
                android:textSize="30sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="15dp"
                android:gravity="center_vertical|center_horizontal|center"
                android:padding="5dp"
                android:text="중식"
                android:textColor="#000000"
                android:textSize="30sp" />

            <EditText
                android:id="@+id/chn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="15dp"
                android:ems="3"
                android:gravity="center"
                android:inputType="number"
                android:padding="5dp"
                android:text="0"
                android:textColor="#000000"
                android:textSize="30sp"
                android:enabled="false" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="15dp"
                android:gravity="center_vertical|center_horizontal|center"
                android:padding="5dp"
                android:textColor="#000000"
                android:textSize="30sp" />

            <CheckBox
                android:id="@+id/chne"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="15dp"
                android:backgroundTintMode="multiply"
                android:drawableTint="#000000"
                android:padding="5dp"
                android:textColor="#000000"
                android:buttonTint="#000000"
                android:enabled="false" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:gravity="center_vertical|center_horizontal|center"
                android:padding="1dp"
                android:textColor="#000000"
                android:textSize="30sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="15dp"
                android:gravity="center_vertical|center_horizontal|center"
                android:padding="5dp"
                android:text="양식"
                android:textColor="#000000"
                android:textSize="30sp" />

            <EditText
                android:id="@+id/wes"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="15dp"
                android:ems="3"
                android:gravity="center"
                android:inputType="number"
                android:padding="5dp"
                android:text="0"
                android:textColor="#000000"
                android:textSize="30sp"
                android:enabled="false" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="15dp"
                android:gravity="center_vertical|center_horizontal|center"
                android:padding="5dp"
                android:textColor="#000000"
                android:textSize="30sp" />

            <CheckBox
                android:id="@+id/wese"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="15dp"
                android:backgroundTintMode="screen"
                android:drawableTint="#000000"
                android:padding="5dp"
                android:textColor="#000000"
                android:buttonTint="#000000"
                android:enabled="false" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:gravity="center_vertical|center_horizontal|center"
                android:padding="1dp"
                android:textColor="#000000"
                android:textSize="30sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="15dp"
                android:gravity="center_vertical|center_horizontal|center"
                android:padding="5dp"
                android:text="기타"
                android:textColor="#000000"
                android:textSize="30sp" />

            <EditText
                android:id="@+id/etc"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="15dp"
                android:ems="3"
                android:gravity="center"
                android:inputType="number"
                android:padding="5dp"
                android:text="0"
                android:textColor="#000000"
                android:textSize="30sp"
                android:enabled="false" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="15dp"
                android:gravity="center_vertical|center_horizontal|center"
                android:padding="5dp"
                android:textColor="#000000"
                android:textSize="30sp" />

            <CheckBox
                android:id="@+id/etce"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="15dp"
                android:backgroundTintMode="add"
                android:drawableTint="#000000"
                android:padding="5dp"
                android:textColor="#000000"
                android:buttonTint="#000000"
                android:enabled="false" />

        </TableRow>

    </TableLayout>

    <Button
        android:id="@+id/back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="돌아가기"
        android:textSize="20sp"
        android:layout_weight="1"/>

</LinearLayout>